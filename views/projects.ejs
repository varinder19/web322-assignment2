<!DOCTYPE html>
<html lang="en" data-theme="dim">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Projects</title>
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container mx-auto px-6 py-10">
    <section class="hero bg-base-200 rounded-2xl p-8 mb-8 text-center">
      <h1 class="text-4xl font-bold mb-2">Projects</h1>
      <p>Sector: <strong><%= currentSector %></strong></p>
    </section>

    <div class="text-center mb-8 space-x-2">
      <a href="/solutions/projects" class="btn btn-outline btn-sm">All</a>
      <a href="/solutions/projects?sector=Industry" class="btn btn-outline btn-sm">Industry</a>
      <a href="/solutions/projects?sector=Transportation" class="btn btn-outline btn-sm">Transportation</a>
      <a href="/solutions/projects?sector=Electricity" class="btn btn-outline btn-sm">Electricity</a>
      <a href="/solutions/projects?sector=Food" class="btn btn-outline btn-sm">Food</a>
      <a href="/solutions/projects?sector=Land Sinks" class="btn btn-outline btn-sm">Land Sinks</a>
    </div>

    <% if (projects && projects.length > 0) { %>
      <div class="grid md:grid-cols-3 gap-8">
        <% projects.forEach(p => { %>
          <div class="card bg-base-100 shadow-xl">
            <figure><img src="<%= p.feature_img_url %>" alt="<%= p.title %>" class="w-full h-56 object-cover" /></figure>
            <div class="card-body">
              <h2 class="card-title"><%= p.title %></h2>
              <p><%= p.summary_short %></p>
              <div class="card-actions justify-end"><a href="/solutions/projects/<%= p.id %>" class="btn btn-secondary">Details</a></div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center opacity-70 italic mt-10">No projects found for this sector.</p>
    <% } %>
  </main>
</body>
</html>
