<!DOCTYPE html>
<html data-theme="dim">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Projects</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mx-auto p-6">
    <div class="hero bg-base-200 rounded-xl p-8 mb-10">
      <div class="text-center">
        <h1 class="text-4xl font-bold mb-2">Projects</h1>
        <p>Browse all climate solution projects or filter by sector from the navbar.</p>
      </div>
    </div>

    <!-- Filter Links -->
    <div class="text-center mb-10 space-x-3">
      <a href="/solutions/projects?sector=Industry" class="btn btn-outline btn-sm">Industry</a>
      <a href="/solutions/projects?sector=Transportation" class="btn btn-outline btn-sm">Transportation</a>
      <a href="/solutions/projects?sector=Electricity" class="btn btn-outline btn-sm">Electricity</a>
      <a href="/solutions/projects?sector=Buildings" class="btn btn-outline btn-sm">Buildings</a>
      <a href="/solutions/projects?sector=Food" class="btn btn-outline btn-sm">Food</a>
    </div>

    <!-- Projects Grid -->
    <% if (projects && projects.length > 0) { %>
      <div class="grid md:grid-cols-3 gap-8">
        <% projects.forEach(project => { %>
          <div class="card bg-base-100 shadow-xl">
            <figure class="bg-base-300">
              <% if (project.feature_img_url && project.feature_img_url.trim() !== "") { %>
                <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="w-full h-56 object-cover rounded-t-xl">
              <% } else { %>
                <div class="w-full h-56 flex items-center justify-center text-gray-400 italic">No image available</div>
              <% } %>
            </figure>

            <div class="card-body">
              <h2 class="card-title"><%= project.title %></h2>
              <p><%= project.summary %></p>
              <div class="card-actions justify-end mt-4">
                <a href="/solutions/projects/<%= project.id %>" class="btn btn-secondary">Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center text-gray-400 italic mt-10">
        No projects available for this sector.
      </div>
    <% } %>
  </div>
</body>
</html>
